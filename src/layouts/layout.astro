---
import '#styles/global.css';
import Header from '#components/header.astro';
import Footer from '#components/footer.astro';
import NewsletterPod from '#pods/newsletter/newsletter.pod.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="John's Web Dev Blog" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&family=Geist:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <!-- Highlight.js theme -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css"
    />
  </head>
  <body class="dark:bg-primary-50 text-tbase-500/75 flex flex-col">
    <Header />

    <main class="mx-auto flex w-full max-w-[1440px] flex-col gap-20 px-4 pt-6 pb-14 md:px-8 lg:px-14">
      <slot name="hero" />
      <div class="grid grid-cols-[minmax(0,_1fr)] gap-16 md:gap-8 lg:grid-cols-[minmax(0,_1fr)_auto]">
        <slot />
        <aside class="flex flex-col gap-8 lg:max-w-[380px] lg:pl-6">
          <slot name="aside" />
        </aside>
      </div>
      <NewsletterPod type="wide" />
    </main>

    <Footer />
  </body>
</html>
